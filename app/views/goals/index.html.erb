<div id="wrapper">
  <div class="goals">
    <% @goals.each do |goal| %>

      <h1><%= goal.title if goal.title? %></h1>
      <div class="text">
        <p><%= goal.content.html_safe if goal.content? %></p>
      </div>

      <h1>Some of The Needy Today's artists</h1>
      
      <div id="img-container">
          <%= link_to (image_tag "orphanage/11.jpg"), image_path("orphanage/11.jpg"), :id => "fancybox", :href => image_path("orphanage/11.jpg"), :rel => "goals-images"%>
          <%= link_to (image_tag "orphanage/12.png"), image_path("orphanage/12.png"), :id => "fancybox", :href => image_path("orphanage/12.png"), :rel => "goals-images"%>
          <%= link_to (image_tag "orphanage/13.jpg"), image_path("orphanage/13.jpg"), :id => "fancybox", :href => image_path("orphanage/13.jpg"), :rel => "goals-images"%>
        </div>
      </div>
    <% end %>
  </div>
</div>