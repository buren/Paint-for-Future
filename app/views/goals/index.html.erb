
<div id="wrapper">

  <div class="goals">
    <% @goals.each do |goal| %>

      <h1><%= goal.title if goal.title? %></h1>
      <div class="text">
        <p><%= goal.content.html_safe if goal.content? %></p>
      </div>
    <% end %>
    <h1>Some of The Needy Today's artists</h1>
    <div id="img-container">
      <%= image_tag "orphanage/11.jpg" %>
      <%= image_tag "orphanage/12.png" %>
      <%= image_tag "orphanage/13.jpg" %>
      <%= image_tag "orphanage/goals4.png", :size => "142x213" %>
    </div>
  </div>
  <div style="margin-bottom:30px;">
    <%= render :partial => "home/paypal_donate" %>
  </div>
</div>






