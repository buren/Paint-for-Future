<div id="wrapper">

  <% @goals.each do |goal| %>
    <ul class="goals">
      <li>
        <h1><%= goal.title if goal.title? %></h1>
          <div class="text">
            <p><%= goal.content.html_safe if goal.content? %></p>
          </div>
      </li>

      <h1>Some of The Needy Today's artists</h1>
      <li> <%= image_tag "orphanage/11.jpg" %></li>
      <li> <%= image_tag "orphanage/12.png" %></li>
      <li> <%= image_tag "orphanage/13.jpg" %></li>
    </ul>
    <% end %>
</div>
