<title> Paint for Future - Log</title>

<div id="wrapper">

  <% @posts.each do |post| %>
      
    <ul class="posts"> 
      <li>
        
        <header>
          <h1>
              <% if post.title? %>
                <%= link_to post.title.upcase, post %>
              <% end %>
          </h1>   
        </header>

        <body>
          <div class="text">
            <p><%= post.content.html_safe if post.content? %></p>
          </div>

          <% if post.image? %>
             <%= link_to (image_tag post.image_url(:thumb).to_s), post, :class => "fancybox", :href => post.image_url().to_s, :rel =>"posts-images" %>
          <% end %>
        </body>
        <hr>
        <div class="meta-text">
            <% if post.name == "SUSANNE HOLMSATER" %>
              <p><%= post.published_at.upcase if post.published_at? %> &nbsp; by &nbsp; SUSANNE HOLMSÃ„TER</p>
            <% else %>
              <p><%= post.published_at.upcase if post.published_at? %> &nbsp; by &nbsp; <%= post.name.upcase if post.name? %> </p>
            <% end %>
         </div>
      </li>
    </ul>
  <% end %>
      

  <ul class="pagination">
    <li>
    <h1><%= paginate @posts %></h1>
    </li>
  </ul>

  <b>Follow us on:</b> 
  <br>
  <%= link_to image_tag("icons/facebook.png", :size => "34x34"), "http://www.facebook.com/Paintforfuture", :title => "follow on Facebook", :id => "share-buttons" %>
  <%= link_to image_tag("icons/twitter.png", :size => "34x34"), "http://twitter.com/paintforfuture", :title => "follow on Twitter", :id => "share-buttons" %>

</div> 

