<div id="wrapper">

  <% @posts.each do |post| %>
      
    <ul class="posts"> 
      <li>
        <% if post.title? %>
          <header>
            <h1>
              <%= link_to post.title, post %>
            </h1>   
          </header>
        <% else %>
          <header>
            <h1>
              <%= link_to post.published_at.html_safe, post %>
            </h1>
          </header>
        <% end %>

        <body>
          <div class="text">
            <p><%= post.content.html_safe if post.content? %></p>
          </div>

          <% if post.image? %>
             <%= link_to (image_tag post.image_url(:thumb).to_s), post, :id => "fancybox", :href => post.image_url().to_s, :rel =>"posts-images" %>
          <% end %>
        </body>
      </li>
      <div id="fb-root"></div>
      
        
      <ul id="dropdown">
        <li><a href="#" id="follow-text">Share</a>
          <ul>
            <li>       
              <div class="fb-like" data-href="http://www.paintforfuture.org" data-send="true" data-layout="button_count" data-width="150" data-show-faces="false" data-font="trebuchet ms"></div>
            </li>
            <li>
              <a href="https://twitter.com/share" class="twitter-share-button" data-url="http://www.paintforfuture.org/posts/ + #{ @post.id }" data-hashtags="paintforfuture">Tweet</a>
            </li>       
           </ul>
        </li>
      </ul>
    </ul>
  <% end %>
  <ul class="pagination">
    <li>
    <h1><%= paginate @posts %></h1>
    </li>
  </ul>

  <b>Follow us on:</b> 
  <br>
  <%= link_to image_tag("icons/facebook.png", :size => "34x34"), "http://www.facebook.com/Paintforfuture", :title => "follow on Facebook", :id => "share-buttons" %>
  <%= link_to image_tag("icons/twitter.png", :size => "34x34"), "http://twitter.com/paintforfuture", :title => "follow on Twitter", :id => "share-buttons" %>
</div> 
