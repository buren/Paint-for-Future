<div id="wrapper">
  <ul class="posts">
    <li>
    <% if @post.title? %>
      <header>
        <h1><%= @post.title.html_safe %></h1>   
      </header>
    <% else %>
    <header>
        <h1><%= link_to @post.published_at.html_safe if @post.published_at? %></h1>
      </header>
    <% end %>

      <body>
        <div class="text">
          <p><%= @post.content.html_safe if @post.content? %></p>
        </div>
        <% if @post.image? %>
           <%= link_to (image_tag @post.image_url(:thumb).to_s), @post, :class => "fancybox", :href => @post.image_url().to_s  %>
        <% end %>
      </body>
      <h3 id="back-link"><%= link_to 'View all news', posts_path %></h3>
    </li>
  </ul> 
</div>  
  
