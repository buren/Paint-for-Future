<div id="wrapper">
 <ul class="posts"> 
      <li>
        <header>
          <h1>
              <% if @post.title? %>
                <%= link_to @post.title.upcase, @post %>
              <% end %>
          </h1>   
        </header>

        <body>
          <div class="text">
            <% if @post.sub_title? %>
              <p>
                <b><%= @post.sub_title.html_safe %></b>
                <br>
                <br>
                <%= @post.content.html_safe if @post.content? %>
              </p>
            <% else %>
              <p><%= @post.content.html_safe if @post.content? %></p>
            <% end %>
          </div>

          <% if @post.image? %>
             <%= link_to (image_tag @post.image_url(:thumb).to_s), @post, :class => "fancybox", :href => @post.image_url().to_s %>
          <% end %>
        </body>
        <hr>
        <div class="meta-text">
            <% if @post.name == "SUSANNE HOLMSATER" %>
              <p><%= "#{@post.published_at.upcase},  #{@post.created_at.year}" if @post.published_at? %> &nbsp; by &nbsp; SUSANNE HOLMSÃ„TER</p>
            <% else %>
              <p><%= "#{@post.published_at.upcase},  #{@post.created_at.year}" if @post.published_at? %> &nbsp; by &nbsp; <%= @post.name.upcase if @post.name? %> </p>
            <% end %>
        </div>
      </li>
    </ul>



</div>  
  
