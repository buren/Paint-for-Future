<ul style="margin-bottom:20px;">
  <% @messages.each do |message| %>
  	<% if message.message_type == "Donate Message" %>
	    <li>
	      <h1 class="main-heading" style="margin-left:0px;"><%= message.title.html_safe if message.title? %></h1>
	      <div class="donate-info">
	        <hr>
	        <p class="donate"><%= message.content.html_safe if message.content? %></p>
	      </div>
	    </li>
  	<% end %> 
  <% end %> 
</ul>  

