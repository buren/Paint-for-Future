<div id="wrapper">
  <header>
    
    <%= link_to (image_tag ("logo-small.png"), :width => "150px", :height => "120px", :title => "Paint for Future"), home_index_path %> 
  <a href="<%= home_index_path %>">
    <div id="main-title">
      <h1 style="font-size:48px;margin-left:-50px;margin-top:10px;">PAINT FOR FUTURE</h1>
      <h3 style="margin-left:-50px;">AID THROUGH ART</h3>
     </div> 
  </a>
    <div id="menu-wrapper">
      <div class="container">
        <div class="navbar">
          <div class="navbar-inner">
            <%= link_to "Paint for Future", home_index_path, :class => "brand", :id => "bootstrap-menu-title" %>
            <ul class="nav" id="bootsrap-menu-items">
              <li class=<%= is_current_page(projects_path) %>> 
                <%= link_to "THE PROJECT", projects_path %>
              </li>
              <li class=<%= is_current_page(goals_path) %>>
                 <%= link_to "THE CENTER", goals_path %>
              </li>
              <li class=<%= is_current_page(videos_path) %>>
                <%= link_to "PARTNERS", videos_path %>
              </li>
              <li class=<%= is_current_page(posts_path) %>>
                <%= link_to "NEWS", posts_path %>
              </li>
              <li class=<%= is_current_page(galleries_path) %>>
                <%= link_to "GALLERY", galleries_path %>
              </li>
              <li class=<%= is_current_page(contacts_path) %>>
                 <%= link_to "ABOUT US", contacts_path %>
              </li>
              <li>
                 <%= link_to "Call for support", "/upprop.pdf" %>
              </li>
            </ul>
          </div>
        </div>  
      </div>
    </div>
    <% if is_current_page(galleries_path) != "active" %>
      <ul id="dropdown">
        <li><a href="#" id="follow-text">SHARE</a>
          <ul>
            <li>       
              <div class="fb-like" data-href="http://www.paintforfuture.org/" data-send="true" data-layout="button_count" data-width="150" data-show-faces="false" data-font="trebuchet ms"></div>
            </li>
            <li>
              <a href="https://twitter.com/share" class="twitter-share-button" data-url="http://www.paintforfuture.org/" data-hashtags="paintforfuture">Tweet</a>
            </li>
            <li>
              <div class="g-plus" data-action="share"></div>
            </li>       
           </ul>
        </li>
      </ul>
    <% end %>
  </header>
</div>


