<div id="partners-footer">
	<div id="partners-header-donate">	
		<h1 style="font-size:24px;margin-left:20px;display:inline;"><%= link_to "Our partners", videos_path %></h1>
		<form action="https://www.paypal.com/cgi-bin/webscr" method="post" style="float:right;">
			<input type="hidden" name="cmd" value="_s-xclick">
			<input type="hidden" name="hosted_button_id" value="P6KW4Y6RT5SP4">
			<input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
			<img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
		</form>
	</div>		
	<hr style="margin-top:30px;">
	<ul id="partners">
		<% @partners.each do |partner| %>
			<li>
    		<%= image_tag partner.logo %>
			</li>
		<% end %> 	
		<li></li>
	</ul>
</div>