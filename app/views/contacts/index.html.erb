<div id="wrapper">
  <h1 class="main-heading">Project coordinators</h1>
 
  <ul class="cards">
    <% @contacts.each do |contact| %>
      <li>
      
        <%= image_tag contact.image_url(:thumb).to_s, :size => "80x100" if contact.image? %>

        <div class="info">
          <h1><%= link_to contact.name, contact %></h1>
          
          <hr>
         
          <p><%= contact.job_title %></p>
          <p><%= contact.email.html_safe %></p>
          <p><%= contact.phone_number %></p> 
      </li>
    <% end %>
  </ul>  

  <div id="more-info">
    <h1>For more information or interest in becoming a sponsor.</h1>
    <p>Or if your interested in becoming a partner or working with us please send us an email, we can never be to many.</p>
    <br>
    <p>Send an email to: <i><%= mail_to "info@paintforfuture.org" %></a></i></p>

  </div>

  <div id="sierra-contact">
    <h1>Sierra Leone Contact</h1>
    <h2>Dauda Koroma</h2>
    <p><i>Manager of The Needy Today</i></p>
    <p>theneedytoday@yahoo.com</p>
    <p>+(232) 334 745 73</p>
  </div>
</div>
