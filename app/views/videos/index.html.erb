<div id="page">
  <div id="content">
    <% @videos.each do |video| %>
      <div id="post">
        <h3 class="title">
          <%= link_to video.title, video %>
        </h3>
        <div style="clear: both;"></div>
        <div class="entry">
          <p>
            <%= video.description.html_safe if video.description? %>
          </p>
        </div>
     </div>
    <% end %>
    <br />
    <br />
    <br />
    <br />
  </div>
</div>
